{
  "name": "transposaune",
  "version": "1.0.1",
  "description": "Sheet music transposition app using Audiveris OMR",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "package": "electron-vite build && electron-builder",
    "setup:audiveris": "node scripts/setup-audiveris.js",
    "setup:audiveris:all": "node scripts/setup-audiveris.js all",
    "test": "npm run test:unit && npm run lint && npm run type-check",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:omr": "playwright test omr-pipeline.e2e.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "validate": "npm run lint && npm run type-check && npm run test:coverage && npm run build",
    "prepare": "husky",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "sheet-music",
    "transposition",
    "omr",
    "audiveris",
    "musicxml"
  ],
  "author": {
    "name": "Transposaune Contributors",
    "email": "transposaune@example.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@electron/rebuild": "^4.0.2",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^25.0.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "c8": "^10.1.3",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "playwright": "^1.57.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.7",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "@techstark/opencv-js": "^4.12.0-release.1",
    "@xmldom/xmldom": "^0.8.11",
    "adm-zip": "^0.5.16",
    "opensheetmusicdisplay": "^1.9.3",
    "page-dewarp-js": "^0.1.1",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "sharp": "^0.34.5",
    "verovio": "^5.7.0"
  }
}
